= simple_form_for @survey, :url => ( @survey.new_record? ? admin_surveys_path(@survey) : admin_survey_path(@survey) ) do |f|
  = f.error_messages
  .inputs
    = f.input :title
    = f.input :author
    = f.input :description, :as => :text, :input_html => {:columns => 6, :rows => 4}
    = f.input :published_flag, :label => "Published ?"
    %div{:id => 'questions'}
      %h3 Questions
      = render :partial => 'admin/questions/form', :locals => { :survey => f }
      %div{:id => 'question_link_container'}
        = link_to 'Add question', 'javascript:void(0)', {:id => 'add_question'}
    
  .actions
    = f.button :submit, ( @survey.new_record? ? "Create" : "Save" )
